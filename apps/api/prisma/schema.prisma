generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  email    String @unique
  password String

  role String @default("ADMIN")

  @@map("users")
}

model Car {
  id             String @id @default(cuid())
  name           String
  description    String
  slug           String @unique
  brand          String
  model          String
  image_url      String
  year           Int
  location       String
  mileage        Int
  original_value String

  @@map("cars")
}
